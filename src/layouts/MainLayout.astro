---
import "../styles/global.css";
import Footer from "../components/footer";
import Header from "../components/header";

// Get the current path automatically from Astro.url
const currentPath = Astro.url.pathname;

interface Props {
  title?: string;
  hideHeaderOnPrint?: boolean;
  hideFooterOnPrint?: boolean;
  browserTitle?: string;
}

const {
  title = "Michael Johnsey",
  hideHeaderOnPrint = false,
  hideFooterOnPrint = false,
  browserTitle = "Michael Johnsey",
} = Astro.props;
---

<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{browserTitle}</title>
    <script defer src="https://cloud.umami.is/script.js" data-website-id="9099617e-89ec-4c2a-8f9a-804698edcc98"></script>
  </head>
  <body class="flex flex-col min-h-screen w-10/12 mx-auto">
    <div>
      <Header
        title={title}
        currentPath={currentPath}
        hideOnPrint={hideHeaderOnPrint}
      />
    </div>
    <main>
      <slot />
    </main>
    <div>
      <Footer hideOnPrint={hideFooterOnPrint} />
    </div>
  </body>
</html>
